\newcommand{\acct}{\textit}
\newcommand{\code}{\texttt}
\newcommand{\exe}[1]{\textit{\texttt{#1}}}
\newcommand{\file}{\texttt}
\newcommand{\host}{\textsl}
\newcommand{\url}{\textsl}

% Names.
